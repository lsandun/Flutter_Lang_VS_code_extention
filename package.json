{
  "name": "flutter-auto-localizer",
  "displayName": "Flutter Auto Localizer",
  "description": "Complete Flutter localization toolkit: Extract strings, translate to 100+ languages, generate language switcher - all automated!",
  "version": "1.0.0",
  "publisher": "lakshan",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/lsandun/flutter-auto-localizer"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Other"
  ],
  "keywords": [
    "flutter",
    "dart",
    "localization",
    "i18n",
    "internationalization",
    "translation",
    "arb",
    "l10n",
    "multilingual"
  ],
  "activationEvents": [
    "onLanguage:dart"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "flutterAutoLocalizer.extract",
        "title": "Flutter L10n: Extract Strings",
        "icon": "$(symbol-string)"
      },
      {
        "command": "flutterAutoLocalizer.translate",
        "title": "Flutter L10n: Translate",
        "icon": "$(globe)"
      },
      {
        "command": "flutterAutoLocalizer.pageByPage",
        "title": "Flutter L10n: Page by Page",
        "icon": "$(files)"
      },
      {
        "command": "flutterAutoLocalizer.batch",
        "title": "Flutter L10n: Batch All Files",
        "icon": "$(folder)"
      },
      {
        "command": "flutterAutoLocalizer.setup",
        "title": "Flutter L10n: Generate Setup",
        "icon": "$(gear)"
      },
      {
        "command": "flutterAutoLocalizer.status",
        "title": "Flutter L10n: Show Status",
        "icon": "$(info)"
      },
      {
        "command": "flutterAutoLocalizer.preview",
        "title": "Flutter L10n: Preview",
        "icon": "$(eye)"
      },
      {
        "command": "flutterAutoLocalizer.autoLocalize",
        "title": "Flutter L10n: Auto Localize",
        "icon": "$(rocket)"
      },
      {
        "command": "flutterAutoLocalizer.addLanguage",
        "title": "Flutter L10n: Add Language",
        "icon": "$(add)"
      },
      {
        "command": "flutterAutoLocalizer.extractOnly",
        "title": "Flutter L10n: Extract Strings Only",
        "icon": "$(symbol-string)"
      },
      {
        "command": "flutterAutoLocalizer.syncTranslations",
        "title": "Flutter L10n: Sync Translations",
        "icon": "$(sync)"
      },
      {
        "command": "flutterAutoLocalizer.validateLanguages",
        "title": "Flutter L10n: Validate Languages",
        "icon": "$(check)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "flutterAutoLocalizer.extract",
          "when": "editorLangId == dart",
          "group": "flutter_localizer@1"
        },
        {
          "command": "flutterAutoLocalizer.pageByPage",
          "when": "editorLangId == dart",
          "group": "flutter_localizer@2"
        }
      ],
      "editor/title": [
        {
          "command": "flutterAutoLocalizer.extract",
          "when": "editorLangId == dart",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "flutterAutoLocalizer.extract",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l",
        "when": "editorLangId == dart"
      },
      {
        "command": "flutterAutoLocalizer.translate",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorLangId == dart"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^22.19.3",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "google-translate-api-x": "^10.7.2"
  }
}