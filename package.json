{
  "name": "flutter-auto-localizer",
  "displayName": "Flutter Auto Localizer",
  "description": "Complete Flutter localization toolkit: Extract strings, generate translations, setup language switching - all automated!",
  "version": "1.0.0",
  "publisher": "lakshan",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/lsandun/flutter-auto-localizer"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Other"
  ],
  "keywords": [
    "flutter",
    "dart",
    "localization",
    "i18n",
    "internationalization",
    "translation",
    "arb",
    "l10n"
  ],
  "activationEvents": [
    "onLanguage:dart"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "flutterAutoLocalizer.start",
        "title": "Flutter Auto Localizer: Extract & Translate (Current File)"
      },
      {
        "command": "flutterAutoLocalizer.setup",
        "title": "Flutter Auto Localizer: Generate Setup (Provider, Widgets, Config)"
      },
      {
        "command": "flutterAutoLocalizer.batchProcess",
        "title": "Flutter Auto Localizer: Batch Process All Files"
      },
      {
        "command": "flutterAutoLocalizer.preview",
        "title": "Flutter Auto Localizer: Preview Extractable Strings"
      },
      {
        "command": "flutterAutoLocalizer.quickTranslate",
        "title": "Flutter Auto Localizer: Quick Extract (No Translation)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "flutterAutoLocalizer.start",
          "when": "editorLangId == dart",
          "group": "flutter_localizer"
        }
      ]
    },
    "keybindings": [
      {
        "command": "flutterAutoLocalizer.start",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l",
        "when": "editorLangId == dart"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^22.19.3",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "google-translate-api-x": "^10.7.2"
  }
}